<Window x:Class="MVPTema2EnacheMihai.Views.WinnerPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinnerPopupWindow" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10" Text="{Binding WinnerMessage}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Grid.Row="1" Margin="10" Content="Restart" Command="{Binding RestartCommand}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
